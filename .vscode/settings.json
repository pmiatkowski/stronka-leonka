{
    "editor.tabSize": 2,
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"source.fixAll.eslint": "always",
			"source.organizeImports": "never"
		},
		"eslint.runtime": "node",
		"eslint.enable": true,
		"eslint.format.enable": true,
		"eslint.codeActionsOnSave.mode": "all",
		"eslint.validate": [
			"javascript",
			"javascriptreact",
			"typescript",
			"typescriptreact"
		],
}
